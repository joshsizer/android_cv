<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="bottom|center"
  android:background="@android:color/black"
  android:padding="10dp"
  android:alpha=".8"
  tools:context="com.team341.daisycv.LauncherActivity">

  <!-- HUE SLIDER -->
  <TextView
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Hue:"
  android:textColor="@android:color/white" />

  <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="50dp"
    android:id="@+id/hueRangeSeekBar"
    app:min_value="0"
    app:max_value="127"
    app:data_type="_integer"
    app:bar_color="#8990C4"
    app:bar_highlight_color="#2434AD"
    app:left_thumb_color="#1A246D"
    app:right_thumb_color="#1A246D"
    app:left_thumb_color_pressed="#030B47"
    app:right_thumb_color_pressed="#030B47"
    app:corner_radius="10"
    android:alpha="1.0">
  </com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar>

  <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:id="@+id/hueMinTextView"
      android:text="0"
      android:textColor="@android:color/white"
      android:alpha="1.0"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:id="@+id/hueMaxTextView"
      android:text="255"
      android:textColor="@android:color/white"
      android:alpha="1.0"/>

  </RelativeLayout>

  <!-- SATURATION SLIDER -->

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Saturation:"
    android:textColor="@android:color/white" />

  <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="50dp"
    android:id="@+id/satRangeSeekBar"
    app:min_value="0"
    app:max_value="255"
    app:data_type="_integer"
    app:bar_color="#8990C4"
    app:bar_highlight_color="#2434AD"
    app:left_thumb_color="#1A246D"
    app:right_thumb_color="#1A246D"
    app:left_thumb_color_pressed="#030B47"
    app:right_thumb_color_pressed="#030B47"
    app:corner_radius="10"
    android:alpha="1.0">
  </com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar>

  <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout02"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:id="@+id/satMinTextView"
      android:text="0"
      android:textColor="@android:color/white"
      android:alpha="1.0"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:id="@+id/satMaxTextView"
      android:text="255"
      android:textColor="@android:color/white"
      android:alpha="1.0"/>
  </RelativeLayout>

  <!-- Value SLIDER -->

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Value:"
    android:textColor="@android:color/white" />

  <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="50dp"
    android:id="@+id/valRangeSeekBar"
    app:min_value="0"
    app:max_value="255"
    app:data_type="_integer"
    app:bar_color="#8990C4"
    app:bar_highlight_color="#2434AD"
    app:left_thumb_color="#1A246D"
    app:right_thumb_color="#1A246D"
    app:left_thumb_color_pressed="#030B47"
    app:right_thumb_color_pressed="#030B47"
    app:corner_radius="10"
    android:alpha="1.0">
  </com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar>

  <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout03"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:id="@+id/valMinTextView"
      android:text="0"
      android:textColor="@android:color/white"
      android:alpha="1.0"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:id="@+id/valMaxTextView"
      android:text="255"
      android:textColor="@android:color/white"
      android:alpha="1.0"/>
  </RelativeLayout>

</LinearLayout>